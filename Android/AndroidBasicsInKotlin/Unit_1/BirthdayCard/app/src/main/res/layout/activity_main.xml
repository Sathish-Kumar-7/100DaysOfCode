<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/wishToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishText"
            android:textColor="@color/black"
            android:textSize="@dimen/wishTextSize"
            android:fontFamily="cursive"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintHorizontal_bias="0.15"/>
    <TextView
            android:id="@+id/wishFromTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishFrom"
            android:textColor="@color/black"
            android:textSize="@dimen/wishTextSize"
            android:fontFamily="cursive"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>